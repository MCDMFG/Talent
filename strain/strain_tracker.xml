			</strainlevel>
			<strainlevel name="soul_8">
				<anchored to="soul_title" />
				<parameters>
					<stat>soul</stat>
					<level>8</level>
				</parameters>
			</strainlevel>

			<close_charsheet />
			<resize_charsheet />
		</sheetdata>
	</windowclass>

	<windowclass name="strainlevel">
		<frame name="fielddark" offset="7,5,7,5" />
		<sizelimits>
			<maximum height="90" />
			<minimum height="90" />
		</sizelimits>
		<script file="strain/scripts/strain_level.lua" />
		<sheetdata>
			<overlay name="red">
				<frame>red</frame>
			</overlay>
			<overlay name="green">
				<frame>green</frame>
			</overlay>
			<label_strainlevel name="description" />
			<icon_automated name="automated" />
			<windowclicker />
		</sheetdata>
	</windowclass>
</root>