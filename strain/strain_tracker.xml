				</parameters>
			</strainlevel>
			<strainlevel name="mind_5">
				<anchored to="mind_title" />
				<parameters>
					<stat>mind</stat>
					<level>5</level>
				</parameters>
			</strainlevel>
			<strainlevel name="mind_6">
				<anchored to="mind_title" />
				<parameters>
					<stat>mind</stat>
					<level>6</level>
					<automated />
				</parameters>
			</strainlevel>
			<strainlevel name="mind_7">
				<anchored to="mind_title" />
				<parameters>
					<stat>mind</stat>
					<level>7</level>
					<automated />
				</parameters>
			</strainlevel>
			<strainlevel name="mind_8">
				<anchored to="mind_title" />
				<parameters>
					<stat>mind</stat>
					<level>8</level>
					<automated />
				</parameters>
			</strainlevel>

			<!-- SOUL -->				
			<label_charframetop name="soul_title">
				<anchored to="mind_title" position="right" offset="20,0" width="200">
				</anchored>
				<static textres="strain_tracker_label_soul" />
			</label_charframetop>

			<label_strain_cur name="label_cur_soul">
				<anchored to="soul_title" />
			</label_strain_cur>
			<number_strain_cur name="cur_soul" source="strain.soul.current">
				<anchored to="label_cur_soul" />
			</number_strain_cur>

			<label_strain_max name="label_max_soul">
				<anchored to="soul_title" />
			</label_strain_max>
			<number_strain_max name="max_soul" source="strain.soul.max">
				<anchored to="label_max_soul" />
			</number_strain_max>

			<strainlevel name="soul_1">
				<anchored to="soul_title" />
				<parameters>
					<stat>soul</stat>
					<level>1</level>
				</parameters>
			</strainlevel>
			<strainlevel name="soul_2">
				<anchored to="soul_title" />
				<parameters>
					<stat>soul</stat>
					<level>2</level>
					<automated />
				</parameters>
			</strainlevel>
			<strainlevel name="soul_3">
				<anchored to="soul_title" />
				<parameters>
					<stat>soul</stat>
					<level>3</level>
					<automated />
				</parameters>
			</strainlevel>
			<strainlevel name="soul_4">
				<anchored to="soul_title" />
				<parameters>
					<stat>soul</stat>
					<level>4</level>
					<automated />
				</parameters>
			</strainlevel>
			<strainlevel name="soul_5">
				<anchored to="soul_title" />
				<parameters>
					<stat>soul</stat>
					<level>5</level>
				</parameters>
			</strainlevel>
			<strainlevel name="soul_6">
				<anchored to="soul_title" />
				<parameters>
